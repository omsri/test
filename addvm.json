{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SimpleWinvmName": {
        "defaultValue": "SimpleWinVM",
        "type": "string",
        "metadata": {
            "description": "SmpleWin virtualMachine name"
        }
    },
    "vmAdminUserName": {
    "type": "string",
    "minLength": 1,
    "metadata": {
        "description" : "Virtual Machine user name"
    }
  },
    "vmAdminPassword": {
    "type": "securestring",
    "metadata": {
        "description" : "Virtual Machine password"
    }
  }
},
  "variables":{
    "sourcevirtualNetworkName": "source-vnet",
    "mypublicIPAddressName": "myPublicIP",
    "mynetworkInterfacesName": "myVMNic",
    "SimplewinstorageAccountsName": "Simple-storage",
    "Subnet1Name": "Subnet-1",
    "addressPrefix": "10.0.0.0/16",    
    "subnetPrefix": "10.0.0.0/24",
    "sourcevmOSDiskName": "source-vmOSDisk",
    "SimpleWinvmSize": "Standard_DS3_v2",
    "windowsOSVersion": "2016-Datacenter",
    "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('sourcevirtualNetworkName'), variables('Subnet1Name'))]"
  },
  "resources": [
      {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('SimplewinstorageAccountsName')]",
      "location": "West US",
      "apiVersion": "2017-06-01",
      "sku": {
        "name": "Standard_LRS"
        },
        "kind": "Storage",
        "properties": {}
    },
    {
    "type":"Microsoft.Network/publicIPAddresses", 
    "name": "[variables('mypublicIPAddressName')]",
    "location":"West US",
    "apiVersion": "2017-06-01",
    "properties":{
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
        "type":"Microsoft.Network/networkInterfaces",
        "name": "[variables('mynetworkInterfacesName')]",
        "location":"West US",
        "apiVersion": "2017-06-01",
        "dependsOn": [
            "[resourceId('Microsoft.Network/virtualNetworks', variables('mynetworkInterfacesName'))]",
            "[resourceId('Microsoft.Network/publicIPAddresses', variables('mypublicIPAddressName'))]"
        ],
          "properties": {
            "ipConfigurations": [
              {
                "name": "ipconfig1",
                "properties": {
                  "privateIPAllocationMethod": "Dynamic",
                  "publicIPAddress": {
                    "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('mypublicIPAddressName'))]"
                  },
                  "subnet": {
                    "id": "[variables('subnetRef')]"
                  }
                }
              }
            ]
          }
        },
{
            "type":"Microsoft.Compute/virtualMachines",
            "name": "[parameters('SimpleWinvmName')]",
            "location":"West US",
            "apiVersion": "2017-03-30",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('SimplewinstorageAccountsName'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', variables('mynetworkInterfacesName'))]"
            ],
                  "properties": {
                    "hardwareProfile": {
                    "name": "[variables('SimpleWinvmSize')]"
                  },
                  "osProfile": {
                    "computerName": "[parameters('SimpleWinvmSize')]",
                    "adminUsername": "[parameters('vmAdminUsername')]",
                    "adminPassword": "[parameters('vmAdminPassword')]"
                  },
                  "storageProfile": {
                    "imageReference": {
                      "publisher": "MicrosoftWindowsServer",
                      "offer": "WindowsServer",
                      "sku": "[variables('windowsOSVersion')]",
                      "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                      },
                      "dataDisks": [
                        {
                          "diskSizeGB": 1023,
                          "lun": 0,
                          "createOption": "Empty"
                        }
                      ]
                    },
                  "networkProfile": {
                      "networkInterfaces": [
                        {
                          "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('mynetworkInterfacesName'))]"
                        }
                    ]
                  },
                  "diagnosticsProfile": {
                    "bootDiagnostics": {
                      "enabled": true,
                      "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', variables('SimplewinstorageAccountsName')))]"
                            }
                          }
                        }
                      }
                    ]
                  } 
