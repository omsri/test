{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "source zcavmName": {
        "defaultValue": "source-zca-vm",
        "type": "string",
        "metadata": {
            "description": "source zca virtual machine name"
  },
    "source zcavmAdminUserName": {
    "type": "string",
    "minLength": 1,
    "metadata": {
        "description" : "Virtual Machine user name"
    }
  },
    "source zcavmAdminPassword": {
    "type": "securestring",
    "metadata": {
        "description" : "Virtual Machine password"
    }
},
  "variables":{
    "sourcevirtualNetworkName": "source-vnet",
    "sourcepublicIPAddressName": "source-pip",
    "sourcezcanetworkInterfacesName": "sourcezca-vmNic",
    "sourcezcanetworkSecurityGroupsName": "source-zca-nsg",
    "sourcezertostorageAccountsName": "sourcezerto-storage",
    "Subnet1Name": "Subnet-1",
    "sourcevnetPrefix": "10.1.1.0/24",
    "vnetSubnetPrefix" : "10.1.1.32/27",
    "sourcevmOSDiskName": "source-vmOSDisk",
    "sourcevmSize": "Standard_DS3_v2",
    "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('sourcevirtualNetworkName'), variables('Subnet1Name'))]"
  },
  "resources": [
      {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('sourcezertostorageAccountsName')]",
      "location": "West US",
      "apiVersion": "2017-06-01",
      "sku": {
        "name": "Standard_LRS"
        },
        "kind": "Storage",
        "properties": {}
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('sourcevirtualNetworkName')]",
      "location":"West US",
      "apiVersion": "2017-06-01",
      "properties":{
        "addressSpace": {
            "addressPrefixes": [
              "[variables('sourcevnetPrefix')]"
            ]
          },
        "subnets":[
         {
            "name": "[variables('Subnet1Name')]",
          "properties":{ 
            "addressPrefix": "[variables('vnetSubnetPrefix')]"
          }
         }
        ]
     }
    },
    {
        "type":"Microsoft.Network/networkInterfaces",
        "name": "[variables('sourcezcanetworkInterfacesName')]",
        "location":"West US",
        "apiVersion": "2017-06-01",
        "dependsOn": [
            "[resourceId('Microsoft.Network/virtualNetworks', variables('sourcevirtualNetworkName'))]",
            "[resourceId('Microsoft.Network/publicIPAddresses', variables('sourcepublicIPAddressName'))]"
        ],
          "properties": {
            "ipConfigurations": [
              {
                "name": "ipconfig1",
                "properties": {
                  "privateIPAllocationMethod": "Dynamic",
                  "publicIPAddress": {
                    "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('sourcepublicIPAddressName'))]"
                  },
                  "subnet": {
                    "id": "[variables('vmSubnetRef')]"
                }
            }
          }
        ],
        "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('sourcezcanetworkSecurityGroupsName'))]"
                }
      }
    },
{
            "type":"Microsoft.Compute/virtualMachines",
            "name": "[parameters('source zcavmName')]",
            "location":"West US",
            "apiVersion": "2017-03-30",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('sourcezertostorageAccountsName'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', variables('sourcezcanetworkInterfacesName'))]"
            ],
                  "plan": {
                    "name": "zerto60ga",
                    "publisher": "zerto",
                    "product": "zerto-cloud-appliance-50"
                  },
                  "properties": {
                    "hardwareProfile": {
                    "name": "[variables('sourcevmSize')]"
                  },
                  "osProfile": {
                    "computerName": "[parameters('source zcavmName')]",
                    "adminUsername": "[parameters('vmAdminUsername')]",
                    "adminPassword": "[parameters('vmAdminPassword')]"
                  },
                  "storageProfile": {
                    "imageReference": {
                      "publisher": "zerto",
                      "offer": "zerto-cloud-appliance-50",
                      "sku": "zerto60ga",
                      "version": "latest"
                    },
                        "osDisk": {
                          "name": "[variables('sourcevmOSDiskName')]",
                          "caching": "ReadWrite",
                          "createOption": "FromImage",
                          "managedDisk": {
                              "storageAccountType": "Standard_LRS"
                          }
                      }
                  },    
                  "networkProfile": {
                      "networkInterfaces": [
                        {
                          "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('sourcezcanetworkInterfacesName'))]"
                        }
                    ]
                  }
                }
              },
              {
                "name": "[variables('sourcepublicIPAddressName')]",
                "type": "Microsoft.Network/publicIPAddresses",
                "location": "[resourceGroup().location]",
                "apiVersion": "2016-03-30",
                "dependsOn": [ ],
                "tags": {
                  "displayName": "pip"
                },
                "properties": {
                  "publicIPAllocationMethod": "Dynamic"          
                }
              },
              {          
                      "type": "Microsoft.Network/networkSecurityGroups",
                      "name": "[variables('sourcezcanetworkSecurityGroupsName')]",
                      "apiVersion": "2017-06-01",
                      "location": "[resourceGroup().location]",            
                      "properties": { 
                              "securityRules": [
                              {
                                  "name": "AllowRDP",
                                  "etag": "W/\"ec1cdead-18a3-4ae4-b0fa-1d58260ead30\"",
                                  "properties": {
                                      "provisioningState": "Succeeded",
                                      "protocol": "TCP",
                                      "sourcePortRange": "*",
                                      "destinationPortRange": "3389",
                                      "sourceAddressPrefix": "*",
                                      "destinationAddressPrefix": "*",
                                      "access": "Allow",
                                      "priority": 100,
                                      "direction": "Inbound",
                                      "sourceAddressPrefixes": [],
                                      "destinationAddressPrefixes": []
                                  }
                              }
                          ]			
                      }
                  }
              
            ],
            "outputs": {
              "vNet" : {
                "type" : "string",
                "value" : "[resourceId('Microsoft.Network/virtualNetworks', variables('sourcevirtualNetworkName'))]"
              }
            }
          }
        }
    }
